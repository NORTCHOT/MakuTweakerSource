<Page
	x:Class="MakuTweakerNew.WindowsComponents" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:MakuTweakerNew" xmlns:controls="clr-namespace:MicaWPF.Controls;assembly=MicaWPF" xmlns:ui="http://schemas.modernwpf.com/2019"
	Title="Desktop">
	<Grid>
		<StackPanel>
			<TextBlock
				Name="label"
				HorizontalAlignment="Left"
				Margin="24,11,0,0"
				TextWrapping="Wrap"
				Text="Windows Components"
				VerticalAlignment="Top"
				FontSize="32"
				FontFamily="Segoe UI Semibold" />
			<TextBlock
				Name="l1"
				HorizontalAlignment="Left"
				Margin="24,10,0,0"
				TextWrapping="Wrap"
				Text="Install DirectPlay"
				VerticalAlignment="Top"
				FontSize="16" />
			<controls:Button
				Name="dp"
				Margin="24,5,589,0"
				Content="Install"
				Height="28"
				VerticalAlignment="Top"
				Click="dp_Click" />
			<TextBlock
				Name="l2"
				HorizontalAlignment="Left"
				Margin="24,10,0,0"
				TextWrapping="Wrap"
				Text="Install .NET Framework 2.0, 3.0, 3.5"
				VerticalAlignment="Top"
				FontSize="16" />
			<controls:Button
				Name="dnet"
				Margin="24,5,589,0"
				Content="Install"
				Height="28"
				VerticalAlignment="Top"
				Click="dnet_Click" />
			<TextBlock
				Name="l3"
				HorizontalAlignment="Left"
				Margin="24,10,0,0"
				TextWrapping="Wrap"
				Text="Enable Old Windows Photo Viewer"
				VerticalAlignment="Top"
				FontSize="16" />
			<controls:Button
				Name="pv"
				Margin="24,5,589,0"
				Content="Enable"
				Height="28"
				VerticalAlignment="Top"
				Click="pv_Click" />
			<TextBlock
				Name="sr8L"
				HorizontalAlignment="Left"
				Margin="24,10,0,0"
				TextWrapping="Wrap"
				Visibility="Collapsed"
				Text="Enable Local Group Policy Editor"
				VerticalAlignment="Top"
				FontSize="16" />
			<controls:Button
				Name="lgp"
				Margin="24,5,589,0"
				Content="Enable"
				Height="28"
				VerticalAlignment="Top"
				Visibility="Collapsed"
				Click="lgp_Click" />
			<TextBlock
				Name="l4"
				HorizontalAlignment="Left"
				Margin="24,10,0,0"
				TextWrapping="Wrap"
				Text="Enable Third-Party PowerShell Scripts"
				VerticalAlignment="Top"
				FontSize="16" />
			<controls:Button
				Name="pwsh"
				Margin="24,5,589,0"
				Content="Enable"
				Height="28"
				VerticalAlignment="Top"
				Click="pwsh_Click" />
			<TextBlock
				Name="l5"
				HorizontalAlignment="Left"
				Margin="24,10,0,0"
				TextWrapping="Wrap"
				Text="Disable Xbox DVR Requirement"
				VerticalAlignment="Top"
				FontSize="16" />
			<controls:Button
				Name="dvr"
				Margin="24,5,589,0"
				Content="Apply"
				Height="28"
				VerticalAlignment="Top"
				Click="dvr_Click" />
			<TextBlock
				Name="l6"
				HorizontalAlignment="Left"
				Margin="24,10,0,0"
				TextWrapping="Wrap"
				Text="Force Hyper-V Disable"
				VerticalAlignment="Top"
				FontSize="16" />
			<controls:Button
				Name="hypervdis"
				Margin="24,5,589,0"
				Content="Apply"
				Height="28"
				VerticalAlignment="Top"
				Click="hypervdis_Click" />
			<TextBlock
				Name="l7"
				HorizontalAlignment="Left"
				Margin="24,10,0,0"
				TextWrapping="Wrap"
				Text="Reset Outdated Components And WinSxS Cache"
				VerticalAlignment="Top"
				FontSize="16" />
			<controls:Button
				Name="sxs"
				Margin="24,5,589,0"
				Content="Reset"
				Height="28"
				VerticalAlignment="Top"
				Click="sxs_Click" />
		</StackPanel>
	</Grid>
</Page>
