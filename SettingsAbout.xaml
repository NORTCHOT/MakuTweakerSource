<Page
	x:Class="MakuTweakerNew.SettingsAbout" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:MakuTweakerNew" xmlns:controls="clr-namespace:MicaWPF.Controls;assembly=MicaWPF" xmlns:ui="http://schemas.modernwpf.com/2019"
	Title="Explorer">
	<Grid>
		<Image
			Source="MakuTweakerAbout.png"
			HorizontalAlignment="Center"
			VerticalAlignment="Top"
			Width="498"
			Height="100"
			Margin="0,166,0,0" />
		<TextBlock
			Name="credL"
			HorizontalAlignment="Left"
			Margin="30,285,0,0"
			TextWrapping="Wrap"
			Text="credL"
			VerticalAlignment="Top"
			FontSize="24"
			FontFamily="Segoe UI Semibold" />
		<TextBlock
			Name="credN"
			Margin="380,285,0,0"
			TextWrapping="Wrap"
			Text="credN"
			VerticalAlignment="Top"
			FontSize="24"
			FontFamily="Segoe UI Semibold"
			HorizontalAlignment="Left"
			Width="296" />
		<controls:Button
			Name="web"
			Content="Official Website"
			Margin="30,504,452,0"
			Height="38"
			VerticalAlignment="Top"
			Click="Button_Click" />
		<Image
			HorizontalAlignment="Left"
			Height="74"
			Margin="639,495,0,0"
			VerticalAlignment="Top"
			Source="/hand_heart_donate_icon.png"
			Width="75"
			Cursor="Hand"
			MouseLeftButtonUp="Image_MouseLeftButtonUp" />
		<Image
			HorizontalAlignment="Left"
			Height="74"
			Margin="549,495,0,0"
			VerticalAlignment="Top"
			Source="/Telegram_2019_Logo.svg.png"
			Width="75"
			Cursor="Hand"
			MouseLeftButtonUp="Image_MouseLeftButtonUp_2" />
		<Image
			HorizontalAlignment="Left"
			Height="74"
			Margin="459,495,0,0"
			VerticalAlignment="Top"
			Source="/You-Tube-16.png"
			Width="75"
			Cursor="Hand"
			MouseLeftButtonUp="Image_MouseLeftButtonUp_3" />
		<TextBlock
			Name="label"
			HorizontalAlignment="Left"
			Margin="24,11,0,0"
			TextWrapping="Wrap"
			Text="Settings"
			VerticalAlignment="Top"
			FontSize="32"
			FontFamily="Segoe UI Semibold" />
		<TextBlock
			Name="langL"
			HorizontalAlignment="Left"
			Margin="30,70,0,0"
			TextWrapping="Wrap"
			Text="Program Language"
			VerticalAlignment="Top"
			FontSize="16" />
		<ComboBox
			Name="lang"
			HorizontalAlignment="Left"
			Margin="30,100,0,0"
			FontSize="14"
			Width="177"
			VerticalAlignment="Top"
			MinWidth="177"
			MaxWidth="177"
			SelectionChanged="lang_SelectionChanged">
			<ComboBoxItem
				Content=" English [EN]" />
			<ComboBoxItem
				Content=" Русский [RU]" />
			<ComboBoxItem
				Content=" Українська [UA]" />
		</ComboBox>
		<TextBlock
			Name="copyleft"
			HorizontalAlignment="Left"
			Margin="30,551,0,0"
			TextWrapping="Wrap"
			Text="Mark Adderly / 2023 - 2026"
			VerticalAlignment="Top"
			FontSize="24"
			FontFamily="Segoe UI Semilight" />
		<TextBlock
			Name="themeL"
			HorizontalAlignment="Left"
			Margin="220,70,0,0"
			TextWrapping="Wrap"
			Text="Theme"
			VerticalAlignment="Top"
			FontSize="16" />
		<ComboBox
			Name="theme"
			HorizontalAlignment="Left"
			Margin="220,100,0,0"
			FontSize="14"
			Width="177"
			VerticalAlignment="Top"
			MinWidth="177"
			MaxWidth="177"
			SelectionChanged="theme_SelectionChanged">
			<ComboBoxItem
				Name="l"
				Content=" Light" />
			<ComboBoxItem
				Name="d"
				Content=" Dark" />
		</ComboBox>
		<TextBlock
			Name="styleL"
			HorizontalAlignment="Left"
			Margin="410,70,0,0"
			TextWrapping="Wrap"
			Text="Style"
			VerticalAlignment="Top"
			FontSize="16" />
		<ComboBox
			Name="style"
			HorizontalAlignment="Left"
			Margin="410,100,0,0"
			FontSize="14"
			Width="177"
			VerticalAlignment="Top"
			MinWidth="177"
			MaxWidth="177"
			SelectionChanged="style_SelectionChanged">
			<ComboBoxItem
				Content=" Mica" />
			<ComboBoxItem
				Content=" Mica Alt (Default)" />
			<ComboBoxItem
				Content=" Acrylic" />
			<ComboBoxItem
				Name="off"
				Content=" Off" />
		</ComboBox>
	</Grid>
</Page>
